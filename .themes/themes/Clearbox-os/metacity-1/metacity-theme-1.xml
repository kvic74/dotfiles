<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>Clearbox</name>
  <author>Hugo Olabera &lt;hoo@marandhu.jazztel.es&gt;</author>
  <copyright>&#194; Hugo Olabera, 2005</copyright>
  <date>Aug, 2005</date>
  <description>Clearbox 1.0 metacity theme</description>
</info>

<frame_geometry name="normal" rounded_top_left="true" rounded_top_right="true" rounded_bottom_left="true" rounded_bottom_right="true">
  <distance name="left_width" value="5"/>
  <distance name="right_width" value="5"/>
  <distance name="bottom_height" value="5"/>
  <distance name="left_titlebar_edge" value="5"/>
  <distance name="right_titlebar_edge" value="5"/>
  <distance name="title_vertical_pad" value="4"/>
  <border name="title_border" left="0" right="0" top="1" bottom="1"/>
  <border name="button_border" left="1" right="1" top="4" bottom="3"/>
  <aspect_ratio name="button" value="1"/>
</frame_geometry>

<frame_geometry name="no_borders" parent="normal" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <distance name="left_titlebar_edge" value="2"/>
  <distance name="right_titlebar_edge" value="2"/>
  <border name="title_border" left="0" right="0" top="0" bottom="1"/>
  <border name="button_border" left="1" right="1" top="3" bottom="3"/>
</frame_geometry>

<frame_geometry name="utility" parent="normal" title_scale="small" rounded_top_left="false" rounded_top_right="false" rounded_bottom_left="false" rounded_bottom_right="false">
  <distance name="left_width" value="1"/>
  <distance name="right_width" value="1"/>
  <distance name="bottom_height" value="1"/>
  <distance name="left_titlebar_edge" value="3"/>
  <distance name="right_titlebar_edge" value="3"/>
  <distance name="title_vertical_pad" value="3"/>
  <border name="button_border" left="0" right="0" top="3" bottom="2"/>
</frame_geometry>

<frame_geometry name="border" has_title="false">
  <distance name="left_width" value="4"/>
  <distance name="right_width" value="4"/>
  <distance name="bottom_height" value="4"/>
  <distance name="left_titlebar_edge" value="0"/>
  <distance name="right_titlebar_edge" value="0"/>
  <distance name="button_width" value="0"/>
  <distance name="button_height" value="0"/>
  <distance name="title_vertical_pad" value="4"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<draw_ops name="bg_blank">
</draw_ops>

<draw_ops name="bg_topbar">
  <gradient type="vertical" x="0" y="2" width="width" height="title_height+4">
    <color value="shade/gtk:bg[SELECTED]/1.2"/>
    <color value="shade/gtk:bg[SELECTED]/1.0"/>
  </gradient>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="0" y1="1" x2="width" y2="1"/>
</draw_ops>

<draw_ops name="bg_topbar_max">
  <gradient type="vertical" x="0" y="1" width="width" height="title_height+4">
    <color value="shade/gtk:bg[SELECTED]/1.2"/>
    <color value="shade/gtk:bg[SELECTED]/1.0"/>
  </gradient>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="0" y1="0" x2="width" y2="0"/>
</draw_ops>

<draw_ops name="bg_left_title">
  <line color="shade/gtk:bg[SELECTED]/1.2" width="1" x1="1" y1="1" x2="1" y2="height"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="3" y1="0" x2="5" y2="0"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="1" y1="2" x2="1" y2="4"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="2" y1="1" x2="3" y2="1"/>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="3" y1="1" x2="5" y2="1"/>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="1" y1="4" x2="1" y2="5"/>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="2" y1="2" x2="3" y2="2"/>
</draw_ops>

<draw_ops name="bg_left_title_shaded">
<include name="bg_left_title"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="3" y1="height-1" x2="5" y2="height-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="1" y1="height-4" x2="1" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="2" y1="height-2" x2="3" y2="height-2"/>
</draw_ops>

<draw_ops name="bg_right_title">
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-5" y1="0" x2="width-3" y2="0"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-2" y1="2" x2="width-2" y2="4"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-3" y1="1" x2="width-2" y2="1"/>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="width-5" y1="1" x2="width-3" y2="1"/>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="width-2" y1="4" x2="width-2" y2="5"/>
  <line color="shade/gtk:bg[SELECTED]/1.4" width="1" x1="width-3" y1="2" x2="width-2" y2="2"/>
</draw_ops>

<draw_ops name="bg_right_title_shaded">
<include name="bg_right_title"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-5" y1="height-1" x2="width-3" y2="height-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-2" y1="height-4" x2="width-2" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-3" y1="height-2" x2="width-2" y2="height-2"/>
</draw_ops>

<draw_ops name="bg_bottom_title">
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="4" y1="0" x2="width-4" y2="0"/>
</draw_ops>

<draw_ops name="bg_bottom_title_no_borders">
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="0" y1="0" x2="width" y2="0"/>
</draw_ops>

<draw_ops name="bg_borders">
  <tint color="shade/gtk:bg[SELECTED]/1.0" alpha="1" x="1" y="top_height" width="4" height="height-top_height-1"/>
  <tint color="shade/gtk:bg[SELECTED]/1.0" alpha="1" x="width-5" y="top_height" width="4" height="height-top_height-1"/>
  <tint color="shade/gtk:bg[SELECTED]/1.0" alpha="1" x="1" y="height-5" width="width-2" height="4"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="4" y1="top_height" x2="4" y2="height-4"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-5" y1="top_height" x2="width-5" y2="height-4"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="4" y1="height-5" x2="width-4" y2="height-5"/>
  <line color="shade/gtk:bg[SELECTED]/1.2" width="1" x1="1" y1="top_height-1" x2="1" y2="height-1"/>
  <line color="shade/gtk:bg[SELECTED]/1.2" width="1" x1="width-4" y1="top_height" x2="width-4" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/1.2" width="1" x1="5" y1="height-4" x2="width-3" y2="height-4"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="3" y1="height-2" x2="5" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="1" y1="height-5" x2="1" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="2" y1="height-3" x2="3" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-5" y1="height-2" x2="width-3" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-2" y1="height-5" x2="width-2" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-3" y1="height-3" x2="width-3" y2="height-2"/>
</draw_ops>

<draw_ops name="outline">
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="0" y="0" width="width-1" height="height-1"/>
</draw_ops>

<draw_ops name="botton_outline">
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="0" y1="0" x2="width" y2="0"/>
</draw_ops>

<draw_ops name="bg_window_no_borders">
  <include name="bg_topbar"/>
  <include name="outline"/>
</draw_ops>

<draw_ops name="bg_window_borders">
  <include name="bg_window_no_borders"/>
  <include name="bg_borders"/>
</draw_ops>

<constant name="ButtonPad" value="5"/>
<constant name="PrelightPad" value="5"/>

<draw_ops name="bg_button">
  <gradient type="vertical" x="2" y="2" width="width-4" height="height-4">
    <color value="shade/gtk:bg[NORMAL]/1.1"/>
    <color value="shade/gtk:bg[NORMAL]/0.8"/>
  </gradient>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="3" y1="1" x2="width-3" y2="1"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="3" y1="height-2" x2="width-3" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="1" y1="3" x2="1" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="width-2" y1="3" x2="width-2" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="2" y1="2" x2="3" y2="2"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="width-3" y1="2" x2="width-2" y2="2"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="2" y1="height-3" x2="3" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="width-3" y1="height-3" x2="width-2" y2="height-3"/>
</draw_ops>

<draw_ops name="bg_button_prelight">
</draw_ops>

<draw_ops name="bg_button_pressed">
  <gradient type="vertical" x="2" y="2" width="width-4" height="height-4">
    <color value="shade/gtk:bg[NORMAL]/0.8"/>
    <color value="shade/gtk:bg[NORMAL]/1.1"/>
  </gradient>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="3" y1="1" x2="width-3" y2="1"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="3" y1="height-2" x2="width-3" y2="height-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="1" y1="3" x2="1" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="width-2" y1="3" x2="width-2" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="2" y1="2" x2="3" y2="2"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="width-3" y1="2" x2="width-2" y2="2"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="2" y1="height-3" x2="3" y2="height-3"/>
  <line color="shade/gtk:bg[SELECTED]/0.7" width="1" x1="width-3" y1="height-3" x2="width-2" y2="height-3"/>
</draw_ops>

<draw_ops name="menu_button">
  <icon x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="menu_button_pressed">
  <icon x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="menu_button_prelight">
  <icon x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="menu_button_unfocused">
  <icon x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="menu_button_unfocused_prelight">
  <icon x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="minimize_button">
  <include name="bg_button"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="3" x1="ButtonPad" y1="height-ButtonPad-1" x2="width-ButtonPad" y2="height-ButtonPad-1"/>
</draw_ops>

<draw_ops name="minimize_button_pressed">
  <include name="bg_button_pressed"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="3" x1="PrelightPad" y1="height-ButtonPad-1" x2="width-PrelightPad" y2="height-ButtonPad-1"/>
</draw_ops>

<draw_ops name="minimize_button_prelight">
  <include name="bg_button"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="3" x1="PrelightPad" y1="height-ButtonPad-1" x2="width-PrelightPad" y2="height-ButtonPad-1"/>
</draw_ops>

<draw_ops name="minimize_button_unfocused">
  <include name="bg_button"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="3" x1="ButtonPad" y1="height-ButtonPad-1" x2="width-ButtonPad" y2="height-ButtonPad-1"/>
</draw_ops>

<draw_ops name="minimize_button_unfocused_prelight">
  <include name="bg_button"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="3" x1="PrelightPad" y1="height-ButtonPad-1" x2="width-PrelightPad" y2="height-ButtonPad-1"/>
</draw_ops>

<draw_ops name="maximize_button">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="ButtonPad-1" y="ButtonPad-1" width="width-ButtonPad*2+1" height="height-ButtonPad*2+1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="ButtonPad-1" y1="ButtonPad" x2="width-ButtonPad+1" y2="ButtonPad"/>
</draw_ops>

<draw_ops name="maximize_button_pressed">
  <include name="bg_button_pressed"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="PrelightPad-1" y="PrelightPad-1" width="width-PrelightPad*2+1" height="height-PrelightPad*2+1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad-1" y1="PrelightPad" x2="width-PrelightPad+1" y2="PrelightPad"/>
</draw_ops>

<draw_ops name="maximize_button_prelight">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="PrelightPad-1" y="PrelightPad-1" width="width-PrelightPad*2+1" height="height-PrelightPad*2+1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad-1" y1="PrelightPad" x2="width-PrelightPad+1" y2="PrelightPad"/>
</draw_ops>

<draw_ops name="maximize_button_unfocused">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="ButtonPad-1" y="ButtonPad-1" width="width-ButtonPad*2+1" height="height-ButtonPad*2+1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="ButtonPad-1" y1="ButtonPad" x2="width-ButtonPad+1" y2="ButtonPad"/>
</draw_ops>

<draw_ops name="maximize_button_unfocused_prelight">
