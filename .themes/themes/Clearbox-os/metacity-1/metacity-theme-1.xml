  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="PrelightPad-1" y="PrelightPad-1" width="width-PrelightPad*2+1" height="height-PrelightPad*2+1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad-1" y1="PrelightPad" x2="width-PrelightPad+1" y2="PrelightPad"/>
</draw_ops>

<draw_ops name="restore_button">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="ButtonPad-1" y="ButtonPad+2" width="width-ButtonPad*2-1" height="height-ButtonPad*2-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="ButtonPad-1" y1="ButtonPad+3" x2="width-ButtonPad-1" y2="ButtonPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="2" x1="ButtonPad+1" y1="ButtonPad" x2="width-ButtonPad+1" y2="ButtonPad"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="ButtonPad+1" y1="ButtonPad-1" x2="ButtonPad+1" y2="ButtonPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-ButtonPad" y1="ButtonPad-1" x2="width-ButtonPad" y2="height-ButtonPad-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-ButtonPad-2" y1="height-ButtonPad-2" x2="width-ButtonPad+1" y2="height-ButtonPad-2"/>
</draw_ops>

<draw_ops name="restore_button_pressed">
  <include name="bg_button_pressed"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="PrelightPad-1" y="PrelightPad+2" width="width-PrelightPad*2-1" height="height-PrelightPad*2-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad-1" y1="PrelightPad+3" x2="width-PrelightPad-1" y2="PrelightPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="2" x1="PrelightPad+1" y1="PrelightPad" x2="width-PrelightPad+1" y2="PrelightPad"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad+1" y1="PrelightPad-1" x2="PrelightPad+1" y2="PrelightPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-PrelightPad" y1="PrelightPad-1" x2="width-PrelightPad" y2="height-PrelightPad-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-PrelightPad-2" y1="height-PrelightPad-2" x2="width-PrelightPad+1" y2="height-PrelightPad-2"/>
</draw_ops>

<draw_ops name="restore_button_prelight">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="PrelightPad-1" y="PrelightPad+2" width="width-PrelightPad*2-1" height="height-PrelightPad*2-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad-1" y1="PrelightPad+3" x2="width-PrelightPad-1" y2="PrelightPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="2" x1="PrelightPad+1" y1="PrelightPad" x2="width-PrelightPad+1" y2="PrelightPad"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad+1" y1="PrelightPad-1" x2="PrelightPad+1" y2="PrelightPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-PrelightPad" y1="PrelightPad-1" x2="width-PrelightPad" y2="height-PrelightPad-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-PrelightPad-2" y1="height-PrelightPad-2" x2="width-PrelightPad+1" y2="height-PrelightPad-2"/>
</draw_ops>

<draw_ops name="restore_button_unfocused">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="ButtonPad-1" y="ButtonPad+2" width="width-ButtonPad*2-1" height="height-ButtonPad*2-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="ButtonPad-1" y1="ButtonPad+3" x2="width-ButtonPad-1" y2="ButtonPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="2" x1="ButtonPad+1" y1="ButtonPad" x2="width-ButtonPad+1" y2="ButtonPad"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="ButtonPad+1" y1="ButtonPad-1" x2="ButtonPad+1" y2="ButtonPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-ButtonPad" y1="ButtonPad-1" x2="width-ButtonPad" y2="height-ButtonPad-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-ButtonPad-2" y1="height-ButtonPad-2" x2="width-ButtonPad+1" y2="height-ButtonPad-2"/>
</draw_ops>

<draw_ops name="restore_button_unfocused_prelight">
  <include name="bg_button"/>
  <rectangle color="shade/gtk:bg[SELECTED]/0.6" x="PrelightPad-1" y="PrelightPad+2" width="width-PrelightPad*2-1" height="height-PrelightPad*2-2"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad-1" y1="PrelightPad+3" x2="width-PrelightPad-1" y2="PrelightPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="2" x1="PrelightPad+1" y1="PrelightPad" x2="width-PrelightPad+1" y2="PrelightPad"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="PrelightPad+1" y1="PrelightPad-1" x2="PrelightPad+1" y2="PrelightPad+3"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-PrelightPad" y1="PrelightPad-1" x2="width-PrelightPad" y2="height-PrelightPad-1"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="1" x1="width-PrelightPad-2" y1="height-PrelightPad-2" x2="width-PrelightPad+1" y2="height-PrelightPad-2"/>
</draw_ops>

<draw_ops name="close_button">
  <include name="bg_button"/>
  <line color="shade/gtk:bg[SELECTED]/0.6" width="2" x1="ButtonPad-1" y1="ButtonPad-1" x2="width-ButtonPad" y2="height-ButtonPad"/>
